
{
  "manifest_version": 3,
  "name": "Unscamable AI",
  "version": "1.0",
  "description": "An AI-enhanced browser extension designed to analyze online transaction conversations, extract critical seller information, and generate realâ€‘time risk assessments to help users identify and avoid potential fraud.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://localhost:5000/*"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "icons": {
    "16": "icons/mlogo.png",
    "32": "icons/mlogo.png",
    "48": "icons/mlogo.png",
    "128": "icons/mlogo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/new.png",
      "32": "icons/new.png"
    },
    "default_title": "Unscamable AI"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}